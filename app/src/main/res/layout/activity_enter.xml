<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:id="@+id/backgroundLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffffff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <Button
                android:id="@+id/goback_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="#ff333333"
                android:padding="10dp"
                android:text="@string/goback"
                android:textColor="#ffcccccc"
                android:layout_alignParentLeft="true"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                />

            <Button
                android:id="@+id/enter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ff333333"
                android:padding="10dp"
                android:text="@string/enter"
                android:textColor="#ffcccccc"
                android:layout_gravity="end|bottom"
                android:layout_alignTop="@+id/goback_button"
                android:layout_toRightOf="@+id/goback_button"
                android:layout_toEndOf="@+id/goback_button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/goback_button"
                >

                <EditText
                    android:id="@+id/enter_edit"
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:text="Enter ISBN:"
                    />


                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
</LinearLayout>